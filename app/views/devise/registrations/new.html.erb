<% title "Registration" %>
<h2>Registration</h2>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <p class="hint"> Enter your personal details below: </p>
  <%= f.input :first_name, required: true, autofocus: true, placeholder: "First Name", label: false, input_html: { class: "form-control placeholder-no-fix" } %>
  <%= f.input :last_name, required: true, autofocus: true, placeholder: "Last Name", label: false, input_html: { class: "form-control placeholder-no-fix" } %>

  <p class="hint"> Enter your account details below: </p>
  <%= f.input :email, required: true, autofocus: true, placeholder: "Email", label: false, input_html: { class: "form-control placeholder-no-fix" } %>
  <%= f.input :password, required: true, label: false, placeholder: "Password", hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { class: "form-control placeholder-no-fix" } %>
  <%= f.input :password_confirmation, required: true, label: false, placeholder: "Re-type Your Password", input_html: { class: "form-control placeholder-no-fix" } %>

  <div class="form-actions">
    <%= f.button :submit, "Sign up", class: "btn red btn-block uppercase" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
